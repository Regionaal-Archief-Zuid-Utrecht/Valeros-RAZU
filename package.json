{
  "name": "view-a-lod",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "copy-mirador-thumbnail-fix": "cp ./src/assets/mirador/IIIFThumbnail.js ./node_modules/mirador/dist/es/src/components/IIIFThumbnail.js",
    "prestart": "ng cache clean && npm run copy-mirador-thumbnail-fix",
    "start": "ng serve",
    "prebuild": "npm run copy-mirador-thumbnail-fix",
    "build": "ng build --configuration production",
    "prebuild:dev": "npm run copy-mirador-thumbnail-fix",
    "build:dev": "ng build --configuration development",
    "prebuild:dev-build": "npm run copy-mirador-thumbnail-fix",
    "build:dev-build": "ng build --configuration dev-build",
    "prebuild:test": "npm run copy-mirador-thumbnail-fix",
    "build:test": "ng build --configuration test",
    "prebuild:acceptance": "npm run copy-mirador-thumbnail-fix",
    "build:acceptance": "ng build --configuration acceptance",
    "prebuild:prod": "npm run copy-mirador-thumbnail-fix",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "check-format": "prettier --check \"src/**/*.{ts,html,scss,json}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.3.2",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@elastic/elasticsearch": "^8.13.0",
    "@floating-ui/dom": "^1.6.4",
    "@ng-icons/core": "^27.2.0",
    "@ng-icons/feather-icons": "^27.2.0",
    "@ng-icons/font-awesome": "^27.2.0",
    "@ngx-translate/core": "^16.0.3",
    "@ngx-translate/http-loader": "^16.0.0",
    "mime": "^4.0.7",
    "mirador": "^3.4.3",
    "mirador-textoverlay": "^0.3.8",
    "ng2-pdfjs-viewer": "^17.0.3",
    "ngx-float-ui": "^17.1.3",
    "ngx-matomo-client": "^6.3.1",
    "openseadragon": "^5.0.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rxjs": "~7.8.0",
    "striptags": "^3.2.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular/cli": "^17.0.1",
    "@angular/compiler-cli": "^17.0.0",
    "@colsen1991/ngx-translate-extract-marker": "^2.0.8",
    "@iiif/presentation-3": "^2.2.3",
    "@types/jasmine": "~5.1.0",
    "@types/n3": "^1.16.4",
    "@types/openseadragon": "^3.0.10",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.9.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.2.2"
  }
}
